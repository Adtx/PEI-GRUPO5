<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <welcome-file-list>
        <welcome-file>WEB-INF/template.jsp</welcome-file>
    </welcome-file-list>



    <!-- SEARCH -->
    <servlet>
        <servlet-name>corrector</servlet-name>
        <servlet-class>Servlet.Corrector</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>corrector</servlet-name>
        <url-pattern>/corrector</url-pattern>
    </servlet-mapping>


    <!-- HOMEPAGE -->
    <servlet>
        <servlet-name>homepage</servlet-name>
        <servlet-class>Servlet.Home</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homepage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- COMPANIES-HOMEPAGE -->
    <servlet>
        <servlet-name>companiesHome</servlet-name>
        <servlet-class>Servlet.Companies</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>companiesHome</servlet-name>
        <url-pattern>/companies</url-pattern>
    </servlet-mapping>

    <!-- LOGIN -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- COMPANIES-LOGIN -->
    <servlet>
        <servlet-name>companiesLogin</servlet-name>
        <servlet-class>Servlet.CompaniesLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>companiesLogin</servlet-name>
        <url-pattern>/companiesLogin</url-pattern>
    </servlet-mapping>

    <!-- COMPANY PROFILE -->
    <servlet>
        <servlet-name>companyProfile</servlet-name>
        <servlet-class>Servlet.CompanyProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>companyProfile</servlet-name>
        <url-pattern>/companyProfile</url-pattern>
    </servlet-mapping>

    <!-- CONTEXT STATS -->
    <servlet>
        <servlet-name>contextStats</servlet-name>
        <servlet-class>Servlet.ContextStats</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contextStats</servlet-name>
        <url-pattern>/contextStats</url-pattern>
    </servlet-mapping>


    <!-- PROFILE -->
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>Servlet.Profile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>


    <!-- WRITING -->
    <servlet>
        <servlet-name>writing</servlet-name>
        <servlet-class>Servlet.Writing</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>writing</servlet-name>
        <url-pattern>/writing</url-pattern>
    </servlet-mapping>

</web-app>
